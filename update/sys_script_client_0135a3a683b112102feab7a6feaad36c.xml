        <name>Confirmation on Field Change</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // Show confirmation dialog when the priority field value changes
    var userConfirmed = confirm('Are you sure you want to change the priority to ' + newValue + '?');

    if (!userConfirmed) {
        // If the user clicks "Cancel", revert the field value to the old value
        g_form.setValue('priority', oldValue);
    }
}]]></script>
