        <name>Add Work Notes to Incident</name>
        <script><![CDATA[var IncidentWorkNotesManager = Class.create();
IncidentWorkNotesManager.prototype = {
    initialize: function() {},

    addWorkNoteToIncident: function(incidentSysId, workNote) {
        var gr = new GlideRecord('incident');
        if (gr.get(incidentSysId)) {
            gr.work_notes = workNote;
            gr.update();
            return 'Work note added successfully';
        } else {
            return 'Incident not found';
        }
    },

    type: 'IncidentWorkNotesManager'
};
]]></script>
