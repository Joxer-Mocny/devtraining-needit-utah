        <api_name>x_58872_needit.UserDetailsFetcher</api_name>
        <caller_access/>
        <client_callable>true</client_callable>
        <description>It fetch user details full name and email</description>
        <mobile_callable>false</mobile_callable>
        <name>UserDetailsFetcher</name>
        <script><![CDATA[var UserDetailsFetcher = Class.create();
UserDetailsFetcher.prototype = {
	initialize: function() {},

	getUserDetails: function(userSysId) {
		var user = new GlideRecord('sys_user');
		if (user.get(userSysId)){
			return {
				fullName: user.getValue('first_name') + ' '+ user.getValue('last_name'),
					email: user.getValue('email')
			};
		}else{
			return{
				error: 'usernot found'
			};
		}
	}
};]]></script>
